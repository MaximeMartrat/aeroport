<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Della+Respira&family=Poppins&family=Ubuntu&display=swap" rel="stylesheet">
        <script src="https://kit.fontawesome.com/c68e41c693.js" crossorigin="anonymous"></script>
        <title>Modifier</title>
    </head>
    <body>
        <style>
            html {
                background-color: rgb(193, 193, 249);
                font-family: 'Della Respira', serif;
                font-family: 'Poppins', sans-serif;
                font-family: 'Ubuntu', sans-serif;
            }
            body {
                height: 98vh;
                width: 99vw;
                display: grid;
                grid-template-rows: 10% 90%;
            }
            #grid_container{
                display: grid;
                grid-template-columns: 10% 20% 20% 20% 20% 10%;
                grid-template-rows: 10% 80% 10%;
            } 
            form{
                margin-left: 50px;
            }
            #aeroport_update{
                grid-column: 3;
                grid-row: 2;
            }
            h3{
                margin-left: 20px ;
                margin-bottom: 50px;
                font-size: 20px;
                color:rgb(96, 92, 194);
                text-shadow: 2px 2px 0px rgb(242, 238, 243);
            }
            label{
                margin-left: 10px;
            }
            input{
                font-size: 15px;
                height: 20px;
                width: 250px;
                padding:5px;
                margin-top: 10px;
                margin-bottom: 10px;
                border-radius: 5px;
                border: 1px solid rgb(193, 193, 249);
            }
            input:hover, select:hover{
                cursor: pointer;
                border: 1px solid rgb(144, 144, 241);
                background-color: rgb(231, 231, 250);
            }
            input:focus, select:focus{
                outline:none;
            }
            select{
                height: 35px;
                width: 260px;
                padding:5px;
                margin-top: 10px;
                margin-bottom: 10px;
                border-radius: 5px;
                border: 1px solid rgb(193, 193, 249);
            }
            button{
            height: 32px;
            padding:5px;
            margin-left: 35%;
            color: white;
            border-radius: 5px;
            background-color: rgb(96, 92, 194);
            border:1px solid rgb(193, 193, 249);
            margin-top: 20px;
            }
            button:hover{
                color: rgb(96, 92, 194);
                background-color: rgb(193, 193, 249);
                border:1px solid rgb(96, 92, 194);
                cursor: pointer;
            }
            h2{
                text-align: center;
                font-size: 50px;
                color: rgb(222, 219, 235);
                text-shadow: 2px 2px 1px rgb(124, 105, 198);
            }
        </style>

        <h2>Aeroport</h2>
        <div id="grid_container">

            <form id="aeroport_update" method="get">
                <h3>AEROPORT  &nbsp&nbsp<a href="#"><i class="fa-solid fa-pen-to-square"></i></a></h3>
                <input type="hidden" value="aeroport" name="table">
                <label for="ville">Ville</label><br>
                <input type="text" value="ville" name="ville"><br>
                <label for="nbre_piste">Pistes</label><br>
                <input type="text" value="3" name="nbre_pistes"><br>
                <label for="URL_image">Image</label><br>
                <input type="text" value="/aero_img/avion.png" name="URL_image">
                <br>
                <button>Valider</button>
            </form>

            <br><br>

        </div>
        <script>
            if(sessionStorage.getItem("is_logged")=='true'){
                ;
            } else {
                location.href = "/"
            }
            window.addEventListener("load", function() {
                console.log("Hello windowloaded!");
                fetch("/volSelect")
                    .then(res => res.text())
                    .then(res => {
                        myresults = JSON.parse(res);
                        console.log(myresults)
                        let av_selec = document.getElementById("select_avion");
                        let pil_selec = document.getElementById("select_pilote");
                        let ville_dep = document.getElementById("select_depart");
                        let ville_arr = document.getElementById("select_arrivee");
                        myresults.aeroport.forEach((item) => {
                            let opt = document.createElement("option");
                            opt.value = item.id_aeroport;
                            opt.text = item.ville;
                            ville_arr.add(opt);
                        });
                    });
            });
            
            select_depart.addEventListener('change', function(){
                console.log(this.value);
            })

        </script>  
    </body>
</html>